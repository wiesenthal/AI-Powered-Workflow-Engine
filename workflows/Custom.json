{
    "entry_point": "join",
    "tasks": {
        "length1": {
            "steps": [
                {
                    "length": "@{name1}"
                }
            ]
        },
        "length2": {
            "steps": [
                {
                    "length": "@{name2}"
                }
            ]
        },
        "compare_lengths": {
            "steps": [
                {
                    "gt": [
                        "${length1}",
                        "${length2}"
                    ]
                },
                {
                    "if": {
                        "condition": "${0}",
                        "true": "First input is longer than second",
                        "false": "Second input is longer than or equal to the first"
                    }
                }
            ]
        },
        "join": {
            "output": "${compare_lengths}"
        }
    }
}